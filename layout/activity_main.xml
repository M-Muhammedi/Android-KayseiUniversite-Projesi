<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draweLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/materialToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ACC1"
            app:title="@string/app_name"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/menu"
            android:paddingTop="10dp"
            app:menu="@menu/nav_menu"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@drawable/arka"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/image_btn"
                        android:padding="10dp"
                        android:src="@drawable/logo">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp">

                    <ImageButton
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:id="@+id/btn_bilgi_sistemi"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/student"
                        android:background="@drawable/image_btn"
                        />


                    <ImageButton
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:id="@+id/btn_alms"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/book"
                        android:background="@drawable/image_btn"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:textColor="@color/white"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="@string/obs"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />


                        <TextView
                            android:textColor="@color/white"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="@string/alms"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp">

                        <ImageButton
                            android:id="@+id/image_btn_duyuru"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/image_btn"
                            app:srcCompat="@drawable/bell" />

                        <ImageButton
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:id="@+id/btn_iletisim1"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            app:srcCompat="@drawable/phone2"
                            android:background="@drawable/image_btn"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:textColor="@color/white"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="Duyurular"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />


                        <TextView
                            android:textColor="@color/white"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="İletişim"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp">

                        <ImageButton
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:id="@+id/image_btn_yemekliste"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            app:srcCompat="@drawable/food"
                            android:background="@drawable/image_btn"/>

                        <ImageButton
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:id="@+id/image_staj"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            app:srcCompat="@drawable/student"
                            android:background="@drawable/image_btn"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:textColor="@color/white"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="Yemek Listesi"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />


                        <TextView
                            android:textColor="@color/white"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="Staj Hakkında"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp">

                        <ImageButton
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:id="@+id/image_btn_tum_duyuru"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            app:srcCompat="@drawable/bell"
                            android:background="@drawable/image_btn"/>

                        <ImageButton
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:id="@+id/image_btn_hesaplama"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            app:srcCompat="@drawable/hesapla"
                            android:background="@drawable/image_btn"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:textColor="@color/white"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="Tüm Duyurular"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />


                        <TextView
                            android:textColor="@color/white"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="Puan Hesaplama"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/header_menu"
        />

</androidx.drawerlayout.widget.DrawerLayout>