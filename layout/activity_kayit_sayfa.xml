<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:background="@drawable/kayseri3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KayitSayfa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_bilgi_sistemi"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kayıt Ol"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp">

        </TextView>

        <EditText
            android:id="@+id/kayit_email"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_all_dayire"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/white"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:hint="E-Mail"/>

        <EditText
            android:layout_marginBottom="10dp"
            android:id="@+id/kayit_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/input_all_dayire"
            android:drawableLeft="@drawable/name_icon"
            android:drawablePadding="5dp"
            android:hint="Ad ve Soyad"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white">

        </EditText>


        <EditText
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/phon"
            android:drawablePadding="5dp"
            android:id="@+id/kayit_telefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:background="@drawable/input_all_dayire"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/white"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:hint="Telefon"/>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/kayit_password"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_left_dayire"
                android:drawablePadding="5dp"
                android:hint="Şifre"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:drawableLeft="@drawable/password"/>

            <RelativeLayout
                android:padding="8dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/input_dayere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_margin="2dp"
                    android:id="@+id/sifregoster2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eye"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/sifregizle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/eye_off"
                    android:visibility="invisible" />

            </RelativeLayout>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp">


            <Button
                android:backgroundTint="@color/img_btn"
                android:id="@+id/btn_kayitet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="KayıtEt"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>